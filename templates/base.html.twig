    <!-- Header content -->
    <nav>
        <ul>
            <li><a href="{{ path('books_list') }}">Books</a></li>
            <li><a href="{{ path('new_book') }}">Create Book</a></li>
        </ul>
    </nav>
</header>

<main>
    {% block body %}{% endblock %}
</main>

<footer>
    <!-- Footer content -->
    <p>&copy; {{ "now"|date("Y") }} My Bookstore. All rights reserved.</p>
</footer>
</body>
</html>
